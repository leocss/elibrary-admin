{% extends 'layout-sidebar.twig' %}

{% block title %}
    Admin Upload | {{ parent() }}
{% endblock %}

{% block content %}
    <div class="page-header">
        <h2>Create User</h2>
    </div>

    <div class="container-fluid">
        <div class="row main-content">
            <div class="col-md-9">

                {% include 'partials/errors.twig' with errors %}

                <form class="form-horizontal" role="form" method="post" action="" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-sm-4">
                            <select name="user[type]" class="form-control">
                                <option>User Type</option>
                                <option value="staff">Staff</option>
                                <option value="student">Student</option>
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="user[unique_id]" placeholder="Matric No. for student or Staff ID for staff">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="user[first_name]" placeholder="First Name">
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="user[last_name]" placeholder="Last Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="user[email]" placeholder="Email">
                        </div>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="user[address]" placeholder="Home Address">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-default">Create User</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>
{% endblock %}