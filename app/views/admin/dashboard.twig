{% extends 'layout-sidebar.twig' %}

{% block title %}
    Dashboard | {{ parent() }}
{% endblock %}

{% block content %}
    <div id="admin-dashboard">
        <div class="main-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6 col-lg-3">
                        <div class="stat">
                            <a href="{{ app.url_generator.generate('user.index') }}"
                               class="stat-icon pull-left">
                                <i class="fa fa-users"></i>
                            </a>

                            <h3 class="stat-content text-right animation-pullDown">
                                {{ stats.total_users }} <strong>Users</strong>
                                <small>Manage Users</small>
                            </h3>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}