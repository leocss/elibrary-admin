<form class="form-horizontal" role="form" method="post" action="" enctype="multipart/form-data">
  <div class="col-md-9">
    <div class="form-group">
      <div class="col-md-10">
        <input type="text" class="form-control" value="{{ book.title|default('') }}" name="title" placeholder="Title">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10">
        <select name="category" class="form-control">
          <option>Select Category</option>
          {% for category in categories %}
            <option value="{{ category.id }}">
              {{ category.title }}</option>
          {% endfor %}
        </select>
        <br/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4">
        <input type="text" class="form-control" name="author" value="{{ book.author|default('') }}"
               placeholder="Author">
      </div>
      <div class="col-md-3">
        <input type="text" class="form-control" name="edition" value="{{ book.edition|default('') }}"
               placeholder="Edition">
      </div>
      <div class="col-md-3">
        <input type="text" class="form-control" name="published_at" value="{{ book.published_at|default('') }}"
               placeholder="Publish at">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-10">
        <textarea name="overview" class="form-control" cols="5" rows="12" placeholder="Overview">{{ book.overview|default('') }}</textarea>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="panel panel-default box no-rounded">
      <div class="panel-heading no-rounded">
        <h3 class="panel-title">
          <span class="fa fa-key"></span>
          Book RFID
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <input type="text" class="form-control" id="file" value="{{ book.title|default('') }}" name="rfid">
        </div>
      </div>
    </div>
    <div class="panel panel-default box no-rounded">
      <div class="panel-heading no-rounded">
        <h3 class="panel-title">
          <span class="fa fa-plus"></span>
          Upload Book
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <input type="file" class="form-control" id="file" name="book">
        </div>
      </div>
    </div>
    <div class="panel panel-default box no-rounded">
      <div class="panel-heading no-rounded">
        <h3 class="panel-title">
          <span class="fa fa-plus"></span>
          Upload Preview image
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <input type="file" class="form-control" id="image-file" name="image">
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-7">
      <button type="submit" class="btn btn-primary btn-block">Save Data</button>
    </div>
  </div>
</form>