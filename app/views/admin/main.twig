{% extends 'layout-main.twig' %}

{% block title %}
    Login Screen | {{ parent() }}
{% endblock %}

{% block content %}

    <div id="user-dashboard">

        {% include 'partials/errors.twig' %}

        <div class="login-form">
            <div class="login-form-title"><h2>Admin Login Panel.</h2></div>
            <form action="{{ app.url_generator.generate('backend.main') }}" method="post" class="form-horizontal"
                  role="form">
                <div class="form-group">
                    <label for="input-login-id" class="col-sm-2 control-label">Admin ID</label>

                    <div class="col-md-5">
                        <input type="text" name="id" class="form-control" id="inputEmail"
                               placeholder="Staff ID or Matric Number">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 control-label">Password</label>

                    <div class="col-md-5">
                        <input type="password" name="password" class="form-control" id="inputPassword"
                               placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">Sign in &raquo; </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}