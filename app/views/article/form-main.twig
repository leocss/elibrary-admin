<div class="box box-default">
    <div class="box-body">

        <div class="form-group">
            <div class="col-sm-12">
                <input type="text" class="form-control" name="article[title]"
                       placeholder="Title" value="{{ article.title | default('') }}">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <textarea class="form-control" name="article[content]" rows="10"
                          placeholder="Type article content here...">{{ article.content | default('') }}</textarea>
            </div>
        </div>

    </div>
    <div class="box-footer">
        <button class="btn btn-primary" type="submit">Publish Article</button>
        <a href="{{ app.url_generator.generate('admin.dashboard') }}" class="btn btn-default"
           type="button">Cancel</a>
    </div>
</div>