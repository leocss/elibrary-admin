{% extends 'layout-sidebar.twig' %}

{% block title %}
    Manage Users | {{ parent() }}
{% endblock %}

{% block content %}
    <div id="user-dashboard">
        <div class="page-header">
            <h2>Manage Library Users</h2>
        </div>
        <div class="container-fluid">
            <div class="row main-content">
                <div class="col-md-9">
                    <div class="user-list">
                        {% for user in users %}
                            <div class="box box-default media user-item">
                                <a class="pull-left padding-md text-center text-white" href="#">
                                    <span class="fa fa-user fa-5x"></span>
                                </a>

                                <div class="media-body padding-md">
                                    <h4 class="media-heading">
                                        <a href="#" class="text-inverse">
                                            {{ user.full_name }}
                                        </a>
                                    </h4>

                                    <div class="btn-group">
                                        <a href="{{ app.url_generator.generate('user.view', {id: user.id}) }}"
                                           class="btn btn-primary">Edit User</a>
                                        <a href="#" id="user-{{ user.id }}" class="btn btn-danger delete-user">Delete
                                            User</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-3">

                </div>
            </div>
        </div>
    </div>
{% endblock %}
