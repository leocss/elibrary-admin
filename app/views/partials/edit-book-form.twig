
<form class="form-horizontal" role="form" method="post" action="" enctype="multipart/form-data">
    <div class="col-md-9">
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" class="form-control" name="title" placeholder="Title">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <select name="category" class="form-control">
                    <option>Select Category</option>
                        <option value="{{ book.id }}">{{ book.title }}</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <input type="text" class="form-control" name="author" value="{{ book.author }}" placeholder="Author">
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" name="edition" {{ book.edition }} placeholder="Edition">
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" name="publish_at" {{ book.published_at }} placeholder="Publish at">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <textarea name="overview" class="form-control" cols="5" rows="9">{{ book.overview }}</textarea>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-default box no-rounded">
            <div class="panel-heading no-rounded">
                <h3 class="panel-title">
                    <span class="fa fa-plus"></span>
                    Book RFID
                </h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="file" value="{{ book.rfid }}" name="rfid">
                </div>
            </div>
        </div>
        <div class="panel panel-default box no-rounded">
            <div class="panel-heading no-rounded">
                <h3 class="panel-title">
                    <span class="fa fa-plus"></span>
                    Upload Book
                </h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <img src="1.jpg" class="img img-thumbnail">
                </div>
            </div>
        </div>

        <div class="panel panel-default box no-rounded">
            <div class="panel-heading no-rounded">
                <h3 class="panel-title">
                    <span class="fa fa-plus"></span>
                    Upload Preview image
                </h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <img src="1.jpg" class="img img-thumbnail">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="has_soft_copy" checked="if{% if(book.has_soft_copy == 1) %}{{ 'true' }}{%  endif %}"> Has Soft Copy
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="has_hard_copy" checked="{% if(book.has_hard_copy == 1) %}{{ 'true' }}{% endif %}> Has Hard Copy
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-7">
            <button type="submit" class="btn btn-primary btn-block">Add book</button>
        </div>
    </div>
</form>