<div class="box box-default">
<div class="box-body">
    <div class="form-group">
      <div class="col-sm-12">
        <input type="text" class="form-control" value="{{ book.title|default('') }}" name="title" placeholder="Title">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <select name="category" class="form-control">
          <option>Select Category</option>
          {% for category in categories %}
            <option value="{{ category.id }}">
              {{ category.title }}</option>
          {% endfor %}
        </select>
        <br/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4">
        <input type="text" class="form-control" name="author" value="{{ book.author|default('') }}"
               placeholder="Author">
      </div>
      <div class="col-sm-4">
        <input type="text" class="form-control" name="edition" value="{{ book.edition|default('') }}"
               placeholder="Edition">
      </div>
      <div class="col-sm-4">
        <input type="text" class="form-control" name="published_at" value="{{ book.published_at|default('') }}"
               placeholder="Publish at">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <textarea name="overview" class="form-control" cols="5" rows="12" placeholder="Overview">{{ book.overview|default('') }}</textarea>
      </div>
    </div>
</div>
</div>

  <div class="form-group">
    <div class="col-md-7">
      <button type="submit" class="btn btn-primary btn-block">Register Book</button>
    </div>
  </div>
